    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <spring.boot.version>2.4.1</spring.boot.version>
        <spring.version>5.3.3</spring.version>
        <spring.cloud.version>3.0.0</spring.cloud.version>
        <spring-cloud-aws.version>2.2.5.RELEASE</spring-cloud-aws.version>
        <spring-cloud-stream.version>3.1.2</spring-cloud-stream.version>
        <jackson.version>2.11.0</jackson.version>
        <junit-jupiter.version>5.5.2</junit-jupiter.version>
        <junit-platform-runner.version>1.5.2</junit-platform-runner.version>
        <!-- for SonarQube -->
        <sonar.coverage.exclusions>
            **/model/**,
            **/exception/**,
            **/constant/**,
            **/entity/**,
            **/jpo/**,
            **/error/**
        </sonar.coverage.exclusions>
        <sonar.exclusions>
            **/constant/**,
            **/exception/**,
            **/model/**,
            **/error/**
        </sonar.exclusions>
    </properties>

